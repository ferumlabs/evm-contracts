{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"],
    },
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2021.String"],
  },
}
